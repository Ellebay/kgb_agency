<footer>
    <div class="container d-lg-flex justify-content-between align-items-center">
        <p class="p-0 m-0">&copy; KGB - {% year %}</p>
        <div>
            {% if footer.items %}
                <ul class="p-0 m-0 navbar-nav">
                    {% for item in footer.items %}
                        <li class="nav-item p-0 m-0">
                            <a class="footer-link {{ 'active' if item.url in page.url }}" href="{{ item.url }}">
                                {{ item.text }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
</footer>